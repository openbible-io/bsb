{
	"imports": {
		"@openbible/bconv": "jsr:@openbible/bconv",
		"@openbible/core": "jsr:@openbible/core@^0.1.19",
		"@std/cli": "jsr:@std/cli@^1.0.6",
		"@std/fs": "jsr:@std/fs@^1.0.4",
		"@std/io": "jsr:@std/io@^0.225.0",
		"@std/path": "jsr:@std/path@^1.0.6",
		"preact": "npm:preact@^10.24.3",
		"preact-render-to-string": "npm:preact-render-to-string@^6.5.11"
	},
	"fmt": {
		"useTabs": true,
		"exclude": ["dist"]
	},
	"compilerOptions": {
		"jsx": "precompile",
		"jsxImportSource": "preact"
	},
	"tasks": {
		"audio": "deno -A ./build/audio.ts",
		"site": "deno -A ./src/text.tsx "
	},
	"name": "@openbible/bsb",
	"version": "0.0.0",
	"exports": "./bsb/index.ts",
	"publish": {
		"include": [
			"bsb/index.ts",
			"deno.json",
			"README.md",
			"LICENSE.md"
		]
	}
}
